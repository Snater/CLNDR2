{
  "env": {
    "browser": true,
    "es2020": true,
    "jest": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:storybook/recommended"
  ],
  "globals": {
    "ejs": "readonly"
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "plugins": [
    "@stylistic"
  ],
  "rules": {
    "@stylistic/comma-dangle": [
      "error",
      "always-multiline"
    ],
    "@stylistic/indent": [
      "error",
      "tab"
    ],
    "@stylistic/quotes": [
      "error",
      "single"
    ]
  }
}