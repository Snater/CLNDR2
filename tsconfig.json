{
	"compilerOptions": {
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"inlineSources": true,
		"isolatedModules": true,
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"module": "esnext",
		"moduleResolution": "node",
		"noEmit": true,
		"noImplicitAny": true,
		"outDir": "dist",
		"removeComments": true,
		"sourceMap": true,
		"strict": true,
		"target": "es5",
		"typeRoots": ["./node_modules/@types", "./src/tests"]
	},
	"exclude": [
		"**/*.stories.*",
		"**/tests"
	],
	"include": [
		"src"
	]
}